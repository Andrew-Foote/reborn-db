					<h4>Learnt on evolution</h4>

					<table>
						{% for move in form.evolution_moves %}
						<tr>
							<td><a href="{{ url_base }}/move/{{ move.id }}.html">{{ move.name }}</a></td>
						</tr>
						{% endfor %}
					</table>
				</section>
				{% endif %}
				
