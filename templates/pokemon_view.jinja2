				  <a href="{{ url_base }}/pokemon_sprites/{{ pokemon.name|slug }}_{{ form.name|slug }}.html">More sprites</a>
				</figcaption>
			</figure>

			<table class="data-table" style="width: 40%; margin-right: 0.5em">
				<tr>
