					<table>
						<tr>
							<th>Level</th>
							<th>Move</th>
						</tr>
						{% for move in form.level_moves %}
						<tr>
							<td>{{ move.level }}</td>
							<td><a href="{{ url_base }}/move/{{ move.id }}.html">{{ move.name }}</a></td>
						</tr>
						{% endfor %}
					</table>

				</section>
				{% if form.evolution_moves %}
