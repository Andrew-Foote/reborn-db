				<td>{{ pokemon.base_friendship }}</td>
				<th>Egg groups</th>
				<td colspan="3">
					{% for egg_group in pokemon.egg_groups %}
						<a href="{{ url_base }}/egg_groups.html#{{ egg_group.id }}">{{ egg_group.name }}</a>{% if not loop.last %},{% endif %}
