{% from 'macros.jinja2' import type_icon %}
{% extends 'base.jinja2' %}

{% block title %}
{{ move.name }}
{% endblock %}

{% block content %}
<section>
	<h1>{{ move.name }}</h1>

	<table class="data=table" style="width: 90%; margin: auto">
		<tr>
			<th>Damage class</th>
			<td>{{ move.damage_class }}</td>
			<th>Type</th>
			<td><a href="/type/{{ move.type|slug }}.html">
				{{ type_icon(move.type) }}
			</a></td>
			<th>Target</th>
			<td>{{ move.target }}</td>
		</tr>
		<tr>
			<th>Power</th>
			<td>{{ move.power or '---' }}</td>
			<th>Accuracy</th>
			<td>{{ move.accuracy or '---' }}</td>
			<th>PP</th>
			<td>{{ move.pp or '---' }}</td>
		</tr>
		<tr>
			<th>Priority</th>
			<td>{{ move.priority }}</td>
			<th colspan="3">Additional effect chance</th>
			<td>{{ move.additional_effect_chance }}%</td>
		</tr>
		<tr>
			<th colspan="2">Additional effect description</th>
			<td colspan="4">{{ move.function }}</td>
		</tr>
	</table>

	<section>
		<h2>In-game description</h2>

		<p>{{ move.desc }}</p>
	</section>

</section>
{% endblock %}