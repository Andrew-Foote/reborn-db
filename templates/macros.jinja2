		</tr>
		<tr class="stat-table-minor">
			<th>IVs</th>
			{% for iv in ivs %}
				<td>
					{% if iv.value >= 31 %}
						<span class="good-stat">{{ iv.value }}</span>
					{% elif iv.value <= 0 %}
						<span class="bad-stat">{{ iv.value }}</span>
					{% else %}
						{{ iv.value }}
					{% endif %}
				</td>
			{% endfor %}
		</tr>
	</table>
