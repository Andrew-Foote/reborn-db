{% from 'macros.jinja2' import type_icon %}
{% extends 'base.jinja2' %}

{% block title %}
Move List
{% endblock %}

{% block content %}
<section>
	<h1>Move List</h1>

	<table class="data=table" style="width: 90%; margin: auto">
		<tr>
			<th>Name</th>
			<th>Damage class</th>
			<th>Type</th>
			<th>Power</th>
			<th>Accuracy</th>
			<th>PP</th>
			<th style="width: 40%">Description</th>
		</tr> 
		{% for move in moves %}
		<tr>
			<td><a href="{{ url_base }}/move/{{ move.id }}.html">{{ move.name }}</a></td>
			<td>{{ move.damage_class }}</td>
			<td><a href="{{ url_base }}/type/{{ move.type }}.html">
				{{ type_icon(move.type) }}
			</a></td>
			<td>{% if move.power is none %}---{% else %}{{ move.power }}{% endif %}</td>
			<td>{% if move.accuracy is none %}---{% else %}{{ move.accuracy }}{% endif %}</td>
			<td>{% if move.pp is none %}---{% else %}{{ move.pp }}{% endif %}</td>
			<td>{{ move.desc }}</td>
		</tr>
		{% endfor %}
	</table>
</section>
{% endblock %}